{
  "name": "todo-application",
  "version": "1.0.0",
  "description": "A simple todo application written in typescript with Node JS",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
    "build": "rimraf build/ && tsc && copyfiles -u 1 src/**/*.html src/**/*.css build/",
    "gcp-build": "rimraf build/ && tsc",
    "start": "node build/index.js",
    "test": "mocha --recursive --timeout 10000 --exit build/test"
  },
  "author": "Success Eze",
  "license": "ISC",
  "dependencies": {
    "chai": "^4.3.6",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^6.14.2",
    "mocha": "^10.0.0",
    "mongoose": "^6.6.1",
    "q": "^1.5.1",
    "rimraf": "^3.0.2",
    "slugify": "^1.6.5",
    "typescript": "^4.8.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/mocha": "^9.1.1",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.7.18",
    "@types/validator": "^13.7.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": "^16.15.0"
  }
}